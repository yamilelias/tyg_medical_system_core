@model system_core_with_authentication.Models.ViewModels.MaterialInventoryViewModel

@{
    ViewData["Title"] = "Editar";
}
<div class="row">
    <div class="col-xs-12">
        <div class="card card-mini">
            <div class="card card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Description" class="col-md-2 control-label">Descripci&#243;n</label>
                            <div class="col-md-10">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Serial" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Serial" class="form-control" />
                                <span asp-validation-for="Serial" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Note" class="col-md-2 control-label">Nota</label>
                            <div class="col-md-10">
                                <input asp-for="Note" class="form-control" />
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaintananceDate" class="col-md-2 control-label">Fecha mantenimiento</label>
                            <div class="col-md-10">
                                <input asp-for="MaintananceDate" class="form-control" />
                                <span asp-validation-for="MaintananceDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Imagen</label>
                            <div class="col-md-10">
                                <img src="@Url.Content("~/images/uploads/"+Model.ImageName)" alt="Image" style="height:300px;" />
                            </div>
                        </div>
                        <br />
                            <div class="row">
                                <div class="col-md-4 col-md-offset-2">
                                    <div class="imageupload panel panel-default" id="my-imageupload">
                                        <div class="panel-heading clearfix">
                                            <h3 class="panel-title pull-left">Subir nueva imagen</h3>
                                        </div>
                                        <div class="file-tab panel-body">
                                            <label class="btn btn-default btn-file">
                                                <span>Abrir imagen</span>
                                                <!-- The file is stored here. -->
                                                <input type="file" name="file">
                                            </label>
                                            <button type="button" class="btn btn-default">Remover</button>
                                        </div>
                                        <div class="url-tab panel-body">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Image URL">
                                            </div>
                                            <button type="button" class="btn btn-default">Remover</button>
                                            <!-- The URL is stored here. -->
                                            <input type="hidden" name="image-url">
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-success btn-sm" />
                                </div>
                            </div>
                        </div>
</form>

                <div>
                    <a asp-action="Index" class="btn btn-default">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
    </div>
    @section Scripts {
        <script src="~/js/bootstrap-imageupload.min.js"></script>
        <script>
            $('#my-imageupload').imageupload({
                allowedFormats: ['jpg'],
                maxFileSizeKb: 1024
            });
        </script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
