@model system_core_with_authentication.Models.ViewModels.AllRequestsViewModel

@{
    ViewData["Title"] = "Lista de todas las solicitudes";
    ViewBag.Menu = "Requests";
}

<div class="row">
    <div class="col-xs-12">
        <div class="card card-table">

                <table class="table card-table">
                    <thead>
                        <tr>
                            <th>
                                Tipo
                            </th>
                            <th>
                                Fecha
                            </th>
                            <th>
                                Notas
                            </th>
                            <th>
                                Resuelto
                            </th>
                            <th>
                                Usuario
                            </th>
                            <th>
                                Detalles
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RepositionStock)
                        {
                            <tr>
                                <td>
                                    Medicamentos
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Solved) <a asp-controller="Requests" asp-action="ChangeSolved" asp-route-id="@item.Id" class="btn btn-success btn-xs">Cambiar</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.User)
                                </td>
                                <td>
                                    <form asp-controller="Requests" asp-action="ViewRepositionDetails" method="get">
                                        <input class="form-control" type="hidden" value="@item.Id" name="RepositionStockId" id="id">
                                        <input type="submit" value="Ver detalles" class="btn btn-info btn-xs" />
                                    </form>
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model.ShiftChange)
                        {
                            <tr>
                                <td>
                                    Cambio de turno
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Solved) <a asp-controller="Requests" asp-action="ChangeSolved_ShiftChange" asp-route-id="@item.Id" class="btn btn-success btn-xs">Cambiar</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.User)
                                </td>
                                <td>
                                    <form asp-controller="Requests" asp-action="ViewShiftChangeDetails" method="get">
                                        <input class="form-control" type="hidden" value="@item.Id" name="ShiftChangeId" id="id">
                                        <input type="submit" value="Ver detalles" class="btn btn-info btn-xs" />
                                    </form>
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model.BreastFeeding)
                        {
                            <tr>
                                <td>
                                    Amamantamiento
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Solved) <a asp-controller="Requests" asp-action="ChangeSolved_BreastFeeding" asp-route-id="@item.Id" class="btn btn-success btn-xs">Cambiar</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Request.User)
                                </td>
                                <td>
                                    <form asp-controller="Requests" asp-action="ViewBreastFeedingDetails" method="get">
                                        <input class="form-control" type="hidden" value="@item.Id" name="BreastFeedingId" id="id">
                                        <input type="submit" value="Ver detalles" class="btn btn-info btn-xs" />
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            </div>
    </div>


