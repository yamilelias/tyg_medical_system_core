@model system_core_with_authentication.Models.Stock

@{
    ViewData["Title"] = "Create Stock";
    ViewBag.Menu = "Stocks";
}

<div class="container col-sm-6 pull-right" style="width:1000px;">
    <div class="card card-banner card-header">
        <div class="col-sm-10">


            <form asp-action="Create">
                <div class="form-horizontal">
                    <h4>Stock</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Total" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Total" class="form-control" />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Expiration" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input type="date" asp-for="Expiration" class="form-control" />
                            <span asp-validation-for="Expiration" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MedicamentId" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="MedicamentId" class="form-control" asp-items="ViewBag.MedicamentId"></select>
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>

            <br />


            </div>
        </div>
    </div>

            

