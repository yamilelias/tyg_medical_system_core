@model IEnumerable<system_core_with_authentication.Models.Users>

@{
    ViewData["Title"] = "User Index";
    ViewBag.Menu = "User";
}

<div class="container" style="width: 10px">

    <a asp-action="Register" asp-controller="Account" class="btn btn-success btn-xs pull-right"> Create new User </a>

</div>

<br />

<div class="row">
    <div class="col-xs-12 col-lg-12 col-md-12">
        <div class="card card-banner card-table">

            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>
                            Identification
                        </th>
                        <th>
                            Full Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telephone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        @if (item.UserName == "asti@asti.com")
                        {

                        }
                        else
                        {
                            <tr>
                                <td>
                                    @if ((@item.UserImage == null) || (@item.UserImage == ""))
                                    {
                                        <img src="~/users/uploads/nophoto.png"
                                             style="max-height:60px; max-width:60px; padding-left:30px;" title="This user lacks a user photo.">
                                    }
                                    else
                                    {
                                        <img src="~/users/uploads/@item.UserImage"
                                             style="max-height:100px; max-width:100px;">
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.SecondLastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telephone)
                                </td>
                                <td style="max-width:200px;">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role)
                                </td>
                                <td>
                                    <a data-toggle="modal" data-target="#myModal" class="btn btn-default btn-xs" onclick="getDataAjax('@item.Id','Users/EditAjax')">Edit</a>
                                    <a asp-action="Details" class="btn btn-info btn-xs" asp-route-id="@item.Id">Details</a>
                                    <a asp-action="Delete" class="btn btn-danger btn-xs" asp-route-id="@item.Id">Delete</a>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>



        </div> 
    </div>
</div>








<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Quick Edit</h4>
            </div>
            <div class="modal-body">

                <form asp-action="EditAjax">
                    <div class="form-horizontal">
                       
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" for="Id" name="Id" />

                        <div class="form-group">
                            <label for="Name" class="col-md-2 control-label">Name</label>
                            <div class="col-md-10">
                                <input name="Name" for="Name" id="Name" class="form-control" />
                      
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="LastName" class="col-md-2 control-label">Paternal Name</label>
                            <div class="col-md-10">
                                <input for="LastName" name="LastName" id="LastName" class="form-control" />
                     
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="SecondLastName" class="col-md-2 control-label">Maternal Name</label>
                            <div class="col-md-10">
                                <input for="SecondLastName" name="SecondLastName" id="SecondLastName" class="form-control" />
                           
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Telephone" class="col-md-2 control-label">Telephone</label>
                            <div class="col-md-10">
                                <input for="Telephone" name="Telephone" id="Telephone" class="form-control" />
                            
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="UserName" class="col-md-2 control-label">Username</label>
                            <div class="col-md-10">
                                <input for="UserName" name="UserName"  id="UserName" class="form-control" />
                           
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Email" class="col-md-2 control-label">Email</label>
                            <div class="col-md-10">
                                <input for="Email" name="Email" id="Email" class="form-control" />
                              
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Roles" class="col-md-2 control-label">Roles</label>
                            <div class="col-md-10">
                                <select id='select' class="form-control" onclick='getRolesAjax("Users/RolesAjax");' >
                                    <option value='0'>Seleccione un rol</option>
                                </select>
                            </div>
                        </div>

                        <br />
                      
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" onclick="setDataUser('Users/EditUserAjax')" class="btn btn-success">Save changes</button>
            </div>
        </div>
    </div>
</div>

