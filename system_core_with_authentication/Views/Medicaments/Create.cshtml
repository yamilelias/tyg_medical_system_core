@model system_core_with_authentication.Models.Medicament

@{
    ViewData["Title"] = "Crear medicamento";
}


<div class="container col-sm-6 col-md-6 pull-right" style="width:1000px;">
    <div class="card card-banner card-header">
        <div class="col-sm-10">


            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">
                   
                    <br />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Content" class="form-control" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Priority" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Priority" class="form-control" />
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Imagen</label>
                        <div class="col-md-10">
                            <input type="file" name="ImageFile" />
                            <span asp-validation-for="MedicamentImage" class="text-danger"></span>
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </form>


            </div>
        </div>
    </div>

            <div class="form-actions no-color" style="max-width:300px;">
                <a class="btn btn-success btn-xs pull-right" asp-action="Index">Volver a Medicamentos</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
