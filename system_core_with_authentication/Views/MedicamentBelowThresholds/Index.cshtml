@model IEnumerable<system_core_with_authentication.Models.ViewModels.MedicamentTresholdViewModel>

@{
    ViewData["Title"] = "Medicaments Below Treshold Alert";
}

<div class="row">
    <div class="col-xs-12">
        <div class="card card-banner card-table">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentStock)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentStock)
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

</div>
</div>
</div>