@model system_core_with_authentication.Models.Location

@{
    ViewData["Title"] = "Borrar Ubicacion";
}

<div class="row">
    <div class="col-xs-4 small">
        <div class="card card-table">
            <div class="card-body">

                <h4>Datos de @Model.Name</h4>
                <hr />
                <dl>
                    <input type="hidden" asp-for="Id" />
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        Direcci&oacute;n
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt>
                        N&uacute;mero Telef&oacute;nico
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                </dl>

                <a class="btn btn-info btn-xs" asp-action="Index">Regresar a &Iacute;ndice</a>

                <a data-toggle="modal" data-target="#myModal2" class="btn btn-danger btn-xs pull-right">Borrar</a>



                </div>
            </div>
        </div>
    </div>


<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h1> &iquest;Est&aacute; seguro de querer borrar esta ubicaci&oacute;n?</h1>
                <h3> Esta acci&oacute;n es permanente e irreversible.</h3>
                <h4> <b> Borrar a esta ubicaci&oacute;n tambi&eacute;n eliminar&aacute; sus horarios. </b> </h4>

            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Borrar" class="pull-right btn btn-danger" />
                </form>

            </div>
        </div>
    </div>
</div>
                
