@model system_core_with_authentication.Models.Location

@{
    ViewData["Title"] = "Crear Ubicacion";
}

<div class="container col-sm-6 col-md-6 col-lg-6 pull-right" style="width:1000px;">
    <div class="card card-banner card-header">
        <div class="col-sm-10">

            <form asp-action="Create">
                <div class="form-horizontal">
                    <h4>Ubicaci&oacute;n</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input required asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="col-md-2 control-label"> Direcci&oacute;n</label>
                        <div class="col-md-10">
                            <input required asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-md-2 control-label"> N&uacute;mero Telef&oacute;nico</label>
                        <div class="col-md-10">
                            <input required asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear" class="btn btn-success btn-xs" />
                        </div>
                    </div>

                    <br />

                </div>
            </form>

            </div>
        </div>
    </div>

            

            <div class="form-actions no-color" style="max-width:300px;">
                <br />
                <a action="action" onclick="history.go(-1);" value="Regresar" class="btn btn-info btn-xs pull-right">Regresar</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
