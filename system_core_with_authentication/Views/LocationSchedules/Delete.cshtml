@model system_core_with_authentication.Models.LocationSchedule

@{
    ViewData["Title"] = "Borrar horario";
}


<div class="row">

    <div class="col-xs-3 pull-left">
        <div class="form-actions no-color">
            <a action="action" onclick="history.go(-1);" type="button" value="Regresar" class="btn btn-info btn-xs">Regresar</a>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="card card-table">
            <div class="card-header">
                <div class="card-title">
                    <h4>Detalles del Horario</h4>
                    <div class="card card-body no-padding">
                        <table class="table card-table">

                            <tr>
                                <th>
                                    Lugar
                                </th>
                                <th>
                                    Lunes
                                </th>
                                <th>
                                    Martes
                                </th>
                                <th>
                                    Miercoles
                                </th>
                                <th>
                                    Jueves
                                </th>
                                <th>
                                    Viernes
                                </th>
                                <th>
                                    Sabado
                                </th>
                                <th>
                                    Domingo
                                </th>
                                <th>

                                </th>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayFor(Model => Model.Location.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => Model.Monday)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => Model.Tuesday)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => Model.Wednesday)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => Model.Thursday)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => Model.Friday)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => Model.Saturday)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => Model.Sunday)
                                </td>
                                <td>
                                    <a data-toggle="modal" data-target="#myModal2" class="btn btn-danger btn-xs pull-right">Borrar</a>
                                </td>
                            </tr>


                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h1> &iquest;Est&aacute; seguro de querer borrar este horario?</h1>
                    <h3> Esta acci&oacute;n es permanente e irreversible.</h3>

                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <input type="submit" value="Borrar" class="pull-right btn btn-danger" />
                    </form>

                </div>
            </div>
        </div>
    </div>
    
