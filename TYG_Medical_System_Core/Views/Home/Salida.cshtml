@model TYG_Medical_System_Core.Models.Stock
@{
    ViewData["Title"] = "Salida";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<p>Agregar medicamento</p>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Stock</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Total" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Expiration" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Expiration" class="form-control" />
                <span asp-validation-for="Expiration" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MedicamentId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="MedicamentId" class="form-control" asp-items="ViewBag.MedicamentId"></select>
                <span asp-validation-for="MedicamentId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
